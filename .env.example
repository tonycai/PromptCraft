# MySQL Configuration
MYSQL_ROOT_PASSWORD=supersecretroot
MYSQL_DATABASE=promptcraft_db
MYSQL_USER=promptcraft_user
MYSQL_PASSWORD=promptcraft_password
MYSQL_PORT=3306

# Redis Configuration
REDIS_PORT=6379

# Application Configuration
LOG_LEVEL=INFO

# OpenAI Configuration (required for AI responses)
OPENAI_API_KEY=your_openai_api_key_here

# Mailchimp Configuration
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_SERVER_PREFIX=us11
SMTP_HOST=smtp.mandrillapp.com
SMTP_PORT=587
SMTP_USERNAME=your_mailchimp_username
SMTP_PASSWORD=your_mailchimp_api_key_here
SMTP_USE_TLS=True
FROM_EMAIL=noreply@yourdomain.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Production Environment Variables (for docker-compose.prod.yml)
NEXT_PUBLIC_API_URL_PROD=https://your-domain.com/api/v1
MYSQL_ROOT_PASSWORD_PROD=your_secure_production_password
MYSQL_USER_PROD=promptcraft_user
MYSQL_PASSWORD_PROD=your_secure_production_password
MYSQL_DATABASE_PROD=promptcraft_db
MYSQL_PORT_PROD=3306
REDIS_PORT_PROD=6379
LOG_LEVEL_PROD=INFO

# Production Mailchimp Configuration
MAILCHIMP_API_KEY_PROD=your_mailchimp_api_key_here
MAILCHIMP_SERVER_PREFIX_PROD=us11
SMTP_HOST_PROD=smtp.mandrillapp.com
SMTP_PORT_PROD=587
SMTP_USERNAME_PROD=your_mailchimp_username
SMTP_PASSWORD_PROD=your_mailchimp_api_key_here
